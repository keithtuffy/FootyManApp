<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.prend_000.footyman.AdminHome"
    android:background="#41A317"
    android:id="@+id/AdminHome">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/teamNameTextField">
    </FrameLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Team Name"
        android:textColor="#000000"
        android:textSize="12pt"
        android:id="@+id/teamNameTextField"
        android:gravity="center"
        android:textAlignment="gravity"

        android:layout_above="@+id/ButtonFrame"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentTop="false" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/teamNameTextField"
        android:id="@+id/ButtonFrame"
        android:layout_alignParentBottom="true">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:columnCount="1"
            android:rowCount="4"
            android:id="@+id/GridLeftButtons"
            android:useDefaultMargins="true"
            android:rowOrderPreserved="false"
            android:columnOrderPreserved="false"
            android:focusable="false"
            android:layout_gravity="left">
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/button1"
                android:layout_row="0"
                android:layout_column="0"
                android:clickable="true"
                android:background="@drawable/button"
                android:layout_columnSpan="1"
                android:minWidth="140dp"
                android:maxWidth="180dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/button3"
                android:layout_row="1"
                android:layout_column="0"
                android:clickable="true"
                android:background="@drawable/button"
                android:minWidth="140dp"
                android:maxWidth="180dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/button5"
                android:layout_row="2"
                android:layout_column="0"
                android:background="@drawable/button"
                android:clickable="true"
                android:minWidth="140dp"
                android:maxWidth="180dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/button7"
                android:layout_row="3"
                android:layout_column="0"
                android:background="@drawable/button"
                android:clickable="true"
                android:minWidth="140dp"
                android:maxWidth="180dp"/>
        </GridLayout>
        <GridLayout
            android:layout_width="140dp"
            android:layout_height="fill_parent"
            android:columnCount="1"
            android:rowCount="4"
            android:orientation="horizontal"
            android:id="@+id/GridRightButtons"
            android:useDefaultMargins="true"
            android:layout_gravity="right">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:layout_column="0"
                android:id="@+id/button2"
                android:layout_row="0"
                android:background="@drawable/button"
                android:clickable="true"
                android:padding="0dp"
                android:layout_columnSpan="1"
                android:minWidth="140dp"
                android:maxWidth="180dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/button4"
                android:layout_row="1"
                android:layout_column="0"
                android:background="@drawable/button"
                android:clickable="true"
                android:minWidth="140dp"
                android:maxWidth="180dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/button6"
                android:layout_row="2"
                android:layout_column="0"
                android:background="@drawable/button"
                android:clickable="true"
                android:minWidth="140dp"
                android:maxWidth="180dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:text="New Button"
                android:id="@+id/button8"
                android:layout_row="3"
                android:layout_column="0"
                android:clickable="true"
                android:minWidth="140dp"
                android:maxWidth="180dp"/>

        </GridLayout>
    </FrameLayout>
</RelativeLayout>
