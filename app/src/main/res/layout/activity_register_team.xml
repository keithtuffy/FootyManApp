<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".RegisterTeam"
    android:background="#4CC417"
    android:id="@+id/RegisterTeam">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/register_header"
        android:textStyle="bold"
        android:textSize="22sp"
        android:id="@+id/Header"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/teamName"
        android:singleLine="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:hint="@string/teamNameText"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/Header" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email"
        android:editable="false"
        android:clickable="false"
        android:layout_below="@+id/teamName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Email"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/phone"
        android:layout_below="@+id/email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Phone"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/managerName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Manager Name"
        android:layout_below="@+id/phone"
        android:inputType="text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/agegroup"
        android:layout_below="@+id/managerName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Age Group"
        android:layout_alignRight="@+id/managerName"
        android:layout_alignEnd="@+id/managerName"
        android:inputType="text" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/register_team"
        android:id="@+id/registerTeam"
        android:background="@drawable/custombutton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:editable="false"
        android:id="@+id/pitchlocation"
        android:hint="Pitch Location"
        android:paddingLeft="3dp"
        android:textSize="18dp"
        android:layout_below="@+id/agegroup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/agegroup"
        android:layout_alignEnd="@+id/agegroup"
        android:clickable="true"
        android:enabled="true"
        android:inputType="none"
        android:paddingTop="5dp"
        android:singleLine="false" />

</RelativeLayout>
